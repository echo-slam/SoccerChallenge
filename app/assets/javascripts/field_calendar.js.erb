var initialize_calendar;
initialize_calendar = function() {
  $('.field-calendar').each(function(){
    var calendar = $(this);
    calendar.fullCalendar({
      defaultView: 'agendaWeek',
      header: {
        left: '',
        center: 'title',
        right: ''
      },
      firstDay: 1,
      minTime: '06:00:00',
      selectable: true,
      selectHelper: true,
      editable: true,
      eventLimit: true,
      events: '/matches.json'
    });
  })
};

$(document).on('turbolinks:load', initialize_calendar)