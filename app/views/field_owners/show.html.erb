<br><br>
<div class="ui container">
  <%= flash_messages %>
  <div class="ui grid">

    <div class="four wide column">
      <h1 class="ui header" id="field-owner-text-color">Management</h1>
      <div class="ui card" id="field-owner-card">
        <div class="custom_img" style="background-image: url(<%= @field_owner.image_url_or_default %>);"></div>
        <div class="content">
          <span><h3 id="surge-text">
            <%= @field_owner.full_name %>
            <% if current_field_owner == @field_owner %>
              <%= link_to(edit_field_owner_path(current_field_owner)) do %>
                <i class="teal edit icon"></i>
              <% end %>
            <% end %>
          </h3></span>
          <div class="meta">
            <a>Field Owner</a>
          </div>
        </div>
        <div class="extra content">
          <span class="right floated">
            <i class="clock icon"></i>
            Joined in <%= @field_owner.created_at.strftime("%Y") %>
          </span>
          <span>
            <i class="soccer icon"></i>
            <%= @fields.count || 0 %> Fields
          </span>
        </div>
      </div>

      <div class="ui segment" id="fields-segment">
        <div class="ui large middle aligned relaxed animated list">
          <% @fields.each do |field| %>
            <div class="item">
              <div class="right floated content">
                <%= link_to 'Edit', edit_field_path(field), class: 'ui blue mini button' %>
              </div>
              <img src="<%= field.image_url_or_default %>" alt="<%= field.name %>" class="ui avatar image">
              <div class="content">
                <a href="<%= field_path(field) %>" class="header"><%= field.name %></a>
              </div>
            </div>
          <% end %>
          <div class="item">
            <div class="right floated content">
              <%= link_to 'New', new_field_path, class: 'ui green mini button' %>
            </div>
          </div>
        </div>
      </div>

    </div>

    <div class="twelve wide column">
      <h1 class="ui header" id="field-owner-text-color">Booking Statistic</h1>
      <div class="field-owner-calendar"></div>
    </div>

  </div>
</div>