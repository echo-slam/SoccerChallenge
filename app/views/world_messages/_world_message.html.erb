<% player = Player.find(world_message.player_id) %>

<% if player == current_player %>
  <p align="right">
    <a class="ui circular blue label">
      <%= emojify world_message.body %>
    </a>
  </p>
<% else %>
  <p>
    <%= player.full_name %>: 
    <a class="ui circular label">
      <%= emojify world_message.body %>
    </a>
  </p>
<% end %>