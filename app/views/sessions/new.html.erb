<% if current_player %>
  <%= current_player.email %>
<% elsif current_field_owner %>
  <%= current_field_owner.email %>
<% end %>

<h1> Sign in</h1>

<%= form_tag signin_path, method: 'post' do %>
  <div class="form-group">
      <%= label_tag :Email %>
      <%= text_field_tag :email, "", class: 'form-control' %>
  </div>

  <div class="form-group">
      <%= label_tag :password %>
      <%= password_field_tag :password, "", class: 'form-control' %>
  </div>

  <%= submit_tag 'Sign in as player', :name => 'sign_in_player' %>
  <%= submit_tag 'Sign in as field owner', :name => 'sign_in_field_owner' %>
<% end %>