<div class="ui large middle aligned relaxed animated list">
  <% if players %>
    <% players.each do |player| %>
      <div class="item">
        <img src="<%= player.image_url_or_default %>" alt="<%= player.full_name %>" class="ui avatar image">
        <div class="content">
          <a href="<%= player_path(player) %>" class="header"><%= player.full_name %></a>
        </div>
      </div>
    <% end %>
  <% else %>
    <% 5.times do %>
      <div class="item">
        <img src="http://i.imgur.com/WbCAvCJ.png" alt="???" class="ui avatar image">
        <div class="content">
          <a class="header">???</a>
        </div>
      </div>
    <% end %>
  <% end %>
</div>