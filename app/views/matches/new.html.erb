<br><br>
<div class="ui container">
  <%= flash_messages %>
  <div class="ui grid">
    <div class="row">
      <div class="five wide column"></div>
      <div class="six wide column">
        <br><br>
        <div class="ui middle aligned list">
          <div class="item">
            <div class="right floated content">
              <a href="<%= signed_in_index_path %>">
                <div class="circular ui icon black button">
                  <i class="chevron left icon"></i>
                </div>
              </a>
            </div>
            <a href="<%= signed_in_index_path %>">
              <h1 class="ui header">Create New Match</h1>
            </a>
          </div>
        </div>
        <div class="ui hidden divider"></div>
        <div class="ui large form">
          <%= form_for @match do |f| %>
            <div class="field">
              <label>Where do you wanna play?</label>
              <%= f.select(:venue_id, options_for_select(Venue.all.collect {|v| [v.name, v.id, class: 'item']} ), {prompt: 'Districts'}, class: 'ui fluid dropdown selection districts_dropdown') %>
            </div>
            <div class="field">
              <label>Start</label>
              <%= f.text_field :starts_at, id: 'start-time' %>
            </div>
            <%= f.submit "Create", class: 'ui large teal fluid button' %>
          <% end %>
        </div>
        <div class="ui hidden divider"></div>
        <div class="ui info message">
          <div class="header"><i class="info circle icon"></i>
            Create new match
          </div>
          <ul class="list">
            <li>Select where you wanna play</li>
            <li>Choose your start time</li>
          </ul>
        </div>
      </div>
      <div class="five wide column"></div>
    </div>
  </div>
</div>