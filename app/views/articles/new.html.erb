<div class="ui container">
  <h1>New Articles</h1>

  <%= form_for @article do |f| %>
    <div class="ui form">
      <%= f.text_field :title, placeholder: "Title", class: "field" %>
      <br><br>
      <%= f.text_area :body, placeholder: "Content", class: "field", id: "my-body" %>

      <%= f.submit "Post", class: "ui teal submit button" %>
    </div>
  <% end %>
  <br><br><br>
</div>

<script>
  var simplemde = new SimpleMDE({ element: $("#my-body")[0] });
</script>