<br><br>
<div class="ui container">
  <%= flash_messages %>
  <div class="ui grid">
    <div class="ui row">
      <div class="eight wide column">
        <div class="ui large form">
          <h1 class="ui header">Sign up as Player</h1><br>
          <%= form_for @player do |f| %>
            <div class="field">
              <%= f.label :full_name, 'Name' %>
              <%= f.text_field :full_name, placeholder: 'Name' %>
            </div>

            <div class="field">
              <%= f.label :email %>
              <%= f.text_field :email, placeholder: 'Email' %>
            </div>

            <div class="field">
              <%= f.label :password %>
              <%= f.password_field :password, placeholder: 'Password' %>
            </div>

            <div class="field">
              <%= f.label :image_url, 'Avatar' %>
              <%= f.file_field :image_url %>
            </div>

            <br>
            <%= f.submit 'Create Player', class: 'ui large green button' %>
            <%= link_to 'You are Field Owner ?', new_field_owner_path, class: 'ui large blue button' %>
          <% end %>
        </div>
      </div>

      <div class="two wide column">
      </div>

      <div class="six wide column">
        <%= image_tag("muller.jpg", class: "ui fluid rounded image", id: "refer_player")%>

        <div class="ui medium info message">
          <div class="header"><i class="info circle icon"></i>
            Who is Player?
          </div>
          <ul class="list">
            <li>Player mean Soccer Player.</li>
            <li>Player play for a team and help their team become famous.</li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
  var player_refer = function() {
    $.getJSON ("/players/new.json", function(data) {
      var players = data.player_references;
      var randomNum = Math.floor(Math.random() * 100) + 1;

      var player_info = players[randomNum]
      $("#refer_player").attr("src",player_info.image_url);
    });
  }
  var interval = 5000; // 5s
  setInterval(player_refer, interval)
</script>