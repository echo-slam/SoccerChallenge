<br><br>
<div class="ui container">
  <%= flash_messages %>
  <div class="ui grid">

    <div class="five wide column">
      <h1 class="ui header">Field</h1>
      <div class="ui card" id="field-card">
        <div class="custom_img" style="background-image: url(<%= @field.image_url_or_default %>);"></div>
        <div class="content">
          <div class="header"><%= @field.name %></div>
          <div class="meta">
            <span class="date">Created in <%= @field.created_at.strftime("%Y-%m-%d") %></span>
          </div>
        </div>
        <div class="extra content">
          <a>
            <i class="marker icon"></i>
            <%= @field.addr %>, <%= @field.venue_name %>
          </a>
        </div>
      </div>
    </div>

    <div class="eleven wide column">
      <h1 class="ui header">Direction</h1>
      <div style='width: 100%;'>
        <div id="map" style='width: 800px; height: 400px;'></div>
      </div>
    </div>

  </div>
</div>

<script src="//maps.google.com/maps/api/js?key=AIzaSyB-njOYmM-TZiBmdwGZXuniH2rf5I1MWeg"></script>
<script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
<script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script> <!-- only if you need custom infoboxes -->
    


<script type="text/javascript">
  var directionsDisplay = new google.maps.DirectionsRenderer();
  var directionsService = new google.maps.DirectionsService();

  var options = {
    enableHighAccuracy: true,
    timeout: 5000,
    maximumAge: 0
  };

  var handler = Gmaps.build('Google');
  handler.buildMap({ internal: {id: 'map'}}, function(){
    if(navigator.geolocation) navigator.geolocation.getCurrentPosition(calcRoute, error, options);
  });

  function error(err) {
    console.warn(`ERROR(${err.code}): ${err.message}`);
  };

  function calcRoute(position) {
    var current_pos = {
      lat: position.coords.latitude,
      lng: position.coords.longitude
    };
    
    var destionation_pos = {
      lat: "<%= @field.latitude %>",
      lng: "<%= @field.longitude %>"
    };
    
    var origin      = new google.maps.LatLng(current_pos.lat, current_pos.lng);
    var destination = new google.maps.LatLng(destionation_pos.lat, destionation_pos.lng);
    
    var request = {
        origin:      origin,
        destination: destination,
        travelMode:  google.maps.TravelMode.DRIVING
    };
    directionsService.route(request, function(response, status) {
      if (status == google.maps.DirectionsStatus.OK) {
        directionsDisplay.setDirections(response);
      }
    });
    directionsDisplay.setMap(handler.getMap());
  }
</script>