<br><br>
<div class="ui container">
  <%= flash_messages %>
  <div class="ui grid">
    <div class="five wide column">
      <h1 class="ui header">
        Profile
      </h1>
      <div class="ui card">
        <div class="custom_img" style="background-image: url(<%= @field.image_url %>);"></div>
        <div class="content">
          <div class="header"><%= @field.name %></div>
          <div class="meta">
            <span class="date">Created in <%= @field.created_at.strftime("%Y-%m-%d") %></span>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>